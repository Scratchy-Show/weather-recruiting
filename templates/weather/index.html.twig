{% extends 'base.html.twig' %}

{% block title %}
    Votre météo pour {{ data.name }}
{% endblock %}

{% block body %}
    <div id="homepage" >
        <h1>Bienvenue sur la page Météo de {{ data.name }}</h1>

        <div class="description">
            <img src="http://openweathermap.org/img/wn/{{ data.icon }}@4x.png" alt="{{ data.description }}"/>
            <p>Actuellement temps {{ data.description }}</p>
        </div>

        <div class="infos-container" >
            <div class="temp-container">
                <div class="temp card">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-temperature"
                         width="60" height="60" viewBox="0 0 24 24" stroke-width="1.5" stroke="#F44336" fill="none"
                         stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M10 13.5a4 4 0 1 0 4 0v-8.5a2 2 0 0 0 -4 0v8.5" />
                        <line x1="10" y1="9" x2="14" y2="9" />
                    </svg>
                    <p>Température actuelle {{ data.temp }}°C</p>
                </div>

                <div class="feels-like card">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user-exclamation"
                         width="60" height="60" viewBox="0 0 24 24" stroke-width="1.5" stroke="#795548" fill="none"
                         stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <circle cx="9" cy="7" r="4" />
                        <path d="M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
                        <line x1="19" y1="7" x2="19" y2="10" />
                        <line x1="19" y1="14" x2="19" y2="14.01" />
                    </svg>
                    <p>Température resssentie {{ data.feels_like }}°C</p>
                </div>

                <div class="temp-min card">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-temperature-minus"
                         width="60" height="60" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2196F3" fill="none"
                         stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M8 13.5a4 4 0 1 0 4 0v-8.5a2 2 0 0 0 -4 0v8.5" />
                        <line x1="8" y1="9" x2="12" y2="9" />
                        <line x1="16" y1="9" x2="22" y2="9" />
                    </svg>
                    <p>Température minimale {{ data.temp_min }}°C</p>
                </div>

                <div class="temp-max card">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-temperature-plus"
                         width="60" height="60" viewBox="0 0 24 24" stroke-width="1.5" stroke="#E91E63" fill="none"
                         stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M8 13.5a4 4 0 1 0 4 0v-8.5a2 2 0 0 0 -4 0v8.5" />
                        <line x1="8" y1="9" x2="12" y2="9" />
                        <line x1="16" y1="9" x2="22" y2="9" />
                        <line x1="19" y1="6" x2="19" y2="12" />
                    </svg>
                    <p>Température maximale {{ data.temp_max }}°C</p>
                </div>
            </div>

            <div class="forecasts-container">
                <div class="humidity card">
                    <img src="{{ asset('img/humidity.png') }}" alt="Poucentage d'humidité"/>
                    <p>Humidité {{ data.humidity }}%</p>
                </div>

                <div class="speed card">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-wind"
                         width="60" height="60" viewBox="0 0 24 24" stroke-width="1.5" stroke="#9E9E9E" fill="none"
                         stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M5 8h8.5a2.5 2.5 0 1 0 -2.34 -3.24" />
                        <path d="M3 12h15.5a2.5 2.5 0 1 1 -2.34 3.24" />
                        <path d="M4 16h5.5a2.5 2.5 0 1 1 -2.34 3.24" />
                    </svg>
                    <p>Vitesse du vent {{ data.speed }} km/h</p>
                </div>

                <div class="sunrise card">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-sunset"
                         width="60" height="60" viewBox="0 0 24 24" stroke-width="1.5" stroke="#FFEB3B" fill="none"
                         stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M3 17h1m16 0h1m-15.4 -6.4l.7 .7m12.1 -.7l-.7 .7m-9.7 5.7a4 4 0 0 1 8 0" />
                        <line x1="3" y1="21" x2="21" y2="21" />
                        <path d="M12 9v-6l3 3m-6 0l3 -3" />
                    </svg>
                    <p>Lever du soleil à {{ data.sunrise | date('H:s', "Europe/Paris")}}</p>
                </div>

                <div class="sunset card">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-sunshine"
                         width="60" height="60" viewBox="0 0 24 24" stroke-width="1.5" stroke="#795548" fill="none"
                         stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M3 17h1m16 0h1m-15.4 -6.4l.7 .7m12.1 -.7l-.7 .7m-9.7 5.7a4 4 0 0 1 8 0" />
                        <line x1="3" y1="21" x2="21" y2="21" />
                        <path d="M12 3v6l3 -3m-6 0l3 3" />
                    </svg>
                    <p>Coucher du soleil à {{ data.sunset | date('H:s', "Europe/Paris")}}</p>
                </div>
            </div>
        </div>

        <h2>Rechercher votre Météo</h2>

        <div class="form-container">
            {{ form_start(form) }}
            {{ form_row(form.city) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
